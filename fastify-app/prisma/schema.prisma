generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      =env("DATABASE_URL")
}

model Person {
  id         Int           @id @default(autoincrement())
  name       String
  gender     String
  job String
  hobbies    PersonHobby[]
}

model Hobby {
  id      Int           @id @default(autoincrement())
  name    String
  persons PersonHobby[]
}

model PersonHobby {
  person   Person @relation(fields: [personId], references: [id])
  personId Int

  hobby    Hobby  @relation(fields: [hobbyId], references: [id])
  hobbyId  Int

  @@id([personId, hobbyId])
}
