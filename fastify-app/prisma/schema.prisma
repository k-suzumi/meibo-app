generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql:root:p@ssw0rd@localhost:3306/meibo_app"
}

model Person {
  id         Int           @id @default(autoincrement())
  name       String
  gender     String
  occupation String
  hobbies    PersonHobby[] // 中間テーブルとのリレーション
}

model Hobby {
  id      Int           @id @default(autoincrement())
  name    String
  persons PersonHobby[] // 中間テーブルとのリレーション
}

model PersonHobby {
  person   Person @relation(fields: [personId], references: [id])
  personId Int

  hobby    Hobby  @relation(fields: [hobbyId], references: [id])
  hobbyId  Int

  @@id([personId, hobbyId]) // 複合主キー（1人1趣味のユニーク制約）
}
