# Dockerfile.fastify
FROM node:18-alpine

WORKDIR /app

# パッケージファイルをコピー
COPY fastify-app/package*.json ./

# 依存関係をインストール
RUN npm ci --only=production

# アプリケーションファイルをコピー
COPY fastify-app/ ./

# Prismaの設定（使用している場合）
RUN npx prisma generate

RUN npm run build


# ポート3001を公開
EXPOSE 3001

# アプリケーションを起動
CMD ["npm", "start"]